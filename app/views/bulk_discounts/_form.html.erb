<%= form_with model: @bulk_discount, url: path, method: method, local: true do |f| %>
  <%= f.label :percentage, "Percentage Discount" %>
  <%= f.number_field :percentage, in: 1..100, step: 1 %>
  <%= f.label :quantity_threshold, "Quantity Threshold" %>
  <%= f.number_field :quantity_threshold, step: 1 %>
  <%= f.submit button_text%>
<% end %>